{% set class = 'user-page' %}
{% extends '@ctr/_master.twig' %}

{% block content %}
			<div id="user-content-container">
				<div id="user-content" class="user-page">
					<div id="header">
						<div id="header-body">
							<h1 id="page-title"><span>{{ profile.displayName }}'s Profile</span></h1>
						</div>
					</div>
					<div class="icon-name-container">
						<div class="user-icon-container">
							<img src="{{ profile.mii.normal }}" class="user-icon" width="32" height="32">
						</div>
						<p class="title">
							<span class="nick-name">{{ profile.displayName }}</span>
							<span class="id-name">{{ profile.username }}</span>
						</p>
					</div>
				</div>
				<div id="header-meta">
					<div class="button-with-option">
						<div id="user-violator-blacklist" class="symbol">
							<select>
								<option value="" selected="">Please make a selection.</option>
								<option value="{{ route('user.report', [ profile.username ]) }}" class="option-violators-create">Report</option>
								<option value="{{ route('user.block', [ profile.username ]) }}" data-screen-name="{{ profile.username }}">Block</option>
							</select>
						</div>
						{% if profile.id != user.id %}
							<div class="toggle-follow-button">
								<button type="button" data-action="{{ route('user.follow', [ profile.username ]) }}" class="follow-button {% if follower > 0 %}none{% endif %}">Follow</button>
								<button type="button" data-action="{{ route('user.unfollow', [ profile.username ]) }}" class="unfollow-button {% if follower == 0 %}none{% endif %}" data-screen-name="{{ profile.username }}">Follow</button>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
			<div id="nav-menu" class="nav-3">
				<a href="{{ route('user.posts', [ profile.username ]) }}" data-pjax="1" class="user-posts-count ">
					<span class="number">{{ profile.posts }}</span>
					<span class="name">Posts</span>
				</a>
				<a href="{{ route('user.following', [ profile.username ]) }}" data-pjax="1" class="user-followings-count ">
					<span class="number">{{ profile.follows }}</span>
					<span class="name">Following</span>
				</a>
				<a href="{{ route('user.followers', [ profile.username ]) }}" data-pjax="1" class="user-followers-count ">
					<span class="number">{{ profile.followers }}</span>
					<span class="name">Followers</span>
				</a>
			</div>
			<div class="body-content">
				<div class="no-content">
					<p>In progress, stay tuned!</p>
				</div>
			</div>
{% endblock %}